<% if current_user %>
<div class="tab-bar text-center">
 <%= link_to root_path do %>
    <i class="fas fa-home <%= "active-icon" if params[:action] == 'home' %>"></i>
  <% end %>


<%= link_to dashboard_path do %>
    <div class= "div-notification">
      <% @matches = Match.where(user: current_user).where(status: true).where(callbooking: nil) %>
      <% unless @matches.count == 0 %>
        <div class= "button-notification-tab-bar"> 1 </div>
      <% end %>
       <i class="fas fa-tasks <%= "active-icon" if params[:controller] == 'dashboards' %>"></i>
    </div>
  <% end %>

  <%= link_to user_path(current_user) do %>
    <i class="fas fa-user <%= "active-icon" if params[:controller] == 'users' %>"></i>
  <% end %>
</div>
<% end %>
