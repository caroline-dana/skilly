<div class="container-wrapping-login">

  <h1 class="container-name-app">Skilly.</h1>

    <div class="container-signup d-flex align-items-center">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, label: false, placeholder: 'Email',
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password, label: false, placeholder: 'Password',
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "my-button" %>


        </div>

      <% end %>
    </div>
</div>
