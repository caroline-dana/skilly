<div class="navbar-picture mb-3" style="height: 56px;">
  <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-lit">
</div>

<div class="container-home-page">
  <h1 class="hello-title"> Hello Aurore<%=  %> </h1>

  <div class="search-box">
    <%= simple_form_for :search, url: job_offers_path, method: :get, html: {class: 'form-inline' } do |f|  %>
      <div class="d-flex justify-content-center align-items-center mt-3">
        <div class="d-flex align-items-center search-bar">
          <%= f.input :job_title, label: false, placeholder: 'Votre job ?', class: "form-control" %>
          <%= f.input :city, label: false, placeholder: 'Où ?', class: "form-control" %>
          <%= f.input :contracttype, label: false, placeholder: 'Contrat ?', class: "form-control" %>
        </div>

        <%= button_tag :submit, class: "button postfix" do %>
            <i class="fas fa-search"></i>
       <% end %>
      </div>
    <% end %>
  </div>

  <div class="container-follow mt-4">
    <h2>Entreprises à suivre</h2>
    <div class="card-product d-flex justify-content-around mt-4">
      <img src="https://www.trouverunassureur.com/wp-content/uploads/2018/12/logo-lydia.jpg" />
      <img src="https://media.glassdoor.com/sqll/2866657/brigad-squarelogo-1560766065791.png" />
      <img src="https://pbs.twimg.com/profile_images/946661478630940673/BzlIV0Ls_400x400.jpg" />
    </div>
  </div>

  <div class="container mt-4">
    <h2>Formations partenaire</h2>
    <div class="card-product mt-3 mb-3">
      <img src="https://pbs.twimg.com/profile_images/1411940871575064576/ySvn5TyT_400x400.jpg" />
      <div class="card-product-infos">
        <h2>Le Wagon</h2>
        <p>Formation Développeur Web <strong>Bootcamp intensif à Paris, 9 semaines</strong></p>
      </div>
    </div>
    <div class="card-product">
      <img src="https://storage.googleapis.com/uptoo-assets/assets/images/logos/uptoo/logo_uptoo_jobs.png" />
      <div class="card-product-infos">
        <h2>Product name</h2>
        <p>Formation Business Developer <strong>Prospection, découverte, négociation, leadership</strong></p>
      </div>
    </div>
  </div>
</div>
