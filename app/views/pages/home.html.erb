<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>

<div class="container">
  <%= simple_form_for :search, url: job_offers_path, method: :get, html: {class: 'form-inline' } do |f|  %>
    <div class="d-flex justify-content-between align-items-end mt-3">
      <div class="d-flex">
        <%= f.input :job_title, label: false, placeholder: 'Recherchez par job', class: "form-control" %>
        <%= f.input :city, label: false, placeholder: 'Recherchez par ville', class: "form-control" %>
        <%= f.input :contracttype, label: false, placeholder: 'Recherchez par contrat', class: "form-control" %>
      </div>

      <%= f.submit class: "btn btn-outline-secondary mb-3 ms-2" %>
    </div>
  <% end %>
</div>
